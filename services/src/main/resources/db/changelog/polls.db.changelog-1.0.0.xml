<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
    <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>

    <changeSet author="exo-polls" id="1.0.0-1">
        <createTable tableName="ADDONS_POLL_POLL">
            <column name="ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POLL_POLL"/>
            </column>
            <column name="NAME" type="NVARCHAR(256)">
            </column>
            <column name="DESCRIPTION" type="NVARCHAR(255)">
            </column>
            <column name="CREATED_DATE" type="TIMESTAMP">
            </column>
            <column name="PUBLICATION_DATE" type="TIMESTAMP">
            </column>
            <column name="EXPIRATION_DATE" type="TIMESTAMP">
            </column>
            <column name="ACTIVE" type="BOOLEAN">
            </column>
            <column name="USER_NAME" type="NVARCHAR(200)">
            </column>
        </createTable>

    </changeSet>

    <changeSet author="exo-polls" id="1.0.0-2" dbms="postgresql">
        <createSequence sequenceName="SEQ_ADDONS_POLL_POLL_ID" startValue="1"/>
    </changeSet>


    <changeSet author="exo-polls" id="1.0.0-3">
        <createTable tableName="ADDONS_POLL_QUESTION">
            <column name="ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POLL_QUESTION"/>
            </column>
            <column name="QUESTION" type="NVARCHAR(256)">
            </column>
            <column name="POLL_POLL_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="FK_POLL_POLL_QUESTION"
                             references="ADDONS_POLL_POLL(ID)"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet author="exo-polls" id="1.0.0-4" dbms="postgresql">
        <createSequence sequenceName="SEQ_ADDONS_POLL_QUESTION_ID" startValue="1"/>
    </changeSet>


    <changeSet author="exo-polls" id="1.0.0-5">
        <createTable tableName="ADDONS_POLL_RESPONSE">
            <column name="ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POLL_RESPONSE"/>
            </column>
            <column name="RESPONSE" type="NVARCHAR(256)">
            </column>
            <column name="POLL_QUESTION_ID" type="BIGINT">
            <constraints nullable="false" foreignKeyName="FK_POLL_QUESTION_RESPONSE"
                         references="ADDONS_POLL_QUESTION(ID)"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet author="exo-polls" id="1.0.0-6" dbms="postgresql">
        <createSequence sequenceName="SEQ_ADDONS_POLL_QUESTION_ID" startValue="1"/>
    </changeSet>

    <changeSet author="exo-polls" id="1.0.0-7">
        <createTable tableName="ADDONS_POLL_USER_RESPONSE">
            <column name="ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POLL_USER_RESPONSE"/>
            </column>
            <column name="USER_NAME" type="NVARCHAR(256)">
            </column>
            <column name="POLL_QUESTION_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="FK_POLL_USER_RESPONSE_QUESTION"
                             references="ADDONS_POLL_QUESTION(ID)"/>
            </column>
            <column name="POLL_RESPONSE_ID" type="BIGINT">
                <constraints nullable="false" foreignKeyName="FK_POLL_USER_RESPONSE"
                             references="ADDONS_POLL_RESPONSE(ID)"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet author="exo-polls" id="1.0.0-8" dbms="postgresql">
        <createSequence sequenceName="SEQ_ADDONS_POLL_USER_RESPONSE_ID" startValue="1"/>
    </changeSet>
</databaseChangeLog>


